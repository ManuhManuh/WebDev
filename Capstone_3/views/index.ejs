<%- include("partials/header.ejs") %>

<h1>Blog List</h1>

<% if (locals.blogList) { %>
    <% blogList.forEach(element => { %>
        <form action="/edit" method="GET">
            <input type="submit" value= <%= element %> name = "submit">
        </form>
    <% }) %>
<% } else { %> 
    <p>No titles yet</p>
<% } %>

<form action="/submit" method="POST">
    <input type="text" name="postTitle" placeholder="Blog post title">
    <input type="text" name="postInput" placeholder="Blog post text">
    <input type="submit" value="Submit post">
</form>

<%- include("partials/footer.ejs") %>